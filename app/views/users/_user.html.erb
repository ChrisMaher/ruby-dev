<li>
  <%= gravatar_for user%>
  <%= link_to user.name, user %> | College : <%= user.college_name %> | Course : <%= user.course_name %>
  <% if current_user.admin? && !current_user?(user) %>
      | <%= link_to "delete", user, method: :delete,
                    data: { confirm: "You sure?" } %>
  <% end %>
</li>
