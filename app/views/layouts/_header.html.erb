<script>
    $(document).ready(function(){
        $(".toggle-form").click(function(){
            $(".project-form").slideToggle();
        });
    });
</script>

<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
           <%= link_to "college planner", root_path, id: "logo" , 'data-no-turbolink' => true %>
    <nav>
      <ul class="nav navbar-nav navbar-right">

        <% if logged_in? %>
            <li><%= link_to image_tag("add.png"), "#", 'data-no-turbolink' => true, class: "toggle-form" %></li>
            <% if current_user.admin? %><li><%= link_to image_tag("users.png"), users_path %></li><% end %>
            <li><%= link_to image_tag("account.png"), current_user , 'data-no-turbolink' => true, class: "right-button-header" %></li>
        <% else %>
            <li><%= link_to image_tag("account.png"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>


